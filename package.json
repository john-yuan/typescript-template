{
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node ./scripts/start.js",
    "build": "tsc && browserify dist/index.js -o public/index.js",
    "dev": "npm run build && npm run less:dev",
    "prerelease": "node ./scripts/emptyOutDir.js && node ./scripts/copyResources.js",
    "release": "npm run prerelease && npm run build && npm run less:release",
    "less:dev": "lessc -ru=all src/index.less ./public/index.css",
    "less:release": "lessc -ru=all src/index.less ./dist/index.css",
    "lint": "eslint --ext .js,.ts ./src ./scripts",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "browserify": "^17.0.0",
    "chokidar": "^3.5.2",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "http-server": "^13.0.1",
    "less": "^4.1.1",
    "lodash": "^4.17.21",
    "typescript": "^4.2.4"
  }
}
